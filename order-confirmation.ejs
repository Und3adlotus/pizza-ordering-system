<!DOCTYPE html>
<html>
<head>
  <title>Order Confirmation</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      max-width: 800px;
      margin: 20px auto;
      line-height: 1.5;
    }
    h1 {
      margin-bottom: 10px;
    }
    .summary-box {
      border: 1px solid #ccc;
      border-radius: 6px;
      padding: 15px;
      margin-top: 15px;
    }
    .summary-row {
      margin: 4px 0;
    }
    .label {
      font-weight: bold;
    }
    ul {
      margin: 5px 0 0 20px;
    }
  </style>
</head>
<body>
  <h1>Order Confirmation</h1>
  <p>Thank you, <strong><%= order.customerName %></strong>! Your order has been placed.</p>

  <div class="summary-box">
    <div class="summary-row">
      <span class="label">Order ID:</span> <%= order.id %>
    </div>
    <div class="summary-row">
      <span class="label">Pizza:</span> <%= order.itemName %>
    </div>
    <div class="summary-row">
      <span class="label">Quantity:</span> <%= order.quantity %>
    </div>
    <div class="summary-row">
      <span class="label">Base Price (each):</span> $<%= order.basePrice %>
    </div>

    <div class="summary-row">
      <span class="label">Toppings:</span>
      <% if (order.toppings && order.toppings.length) { %>
        <ul>
          <% order.toppings.forEach(function(t) { %>
            <li><%= t %></li>
          <% }); %>
        </ul>
      <% } else { %>
        None
      <% } %>
    </div>

    <div class="summary-row">
      <span class="label">Toppings Cost (total):</span> $<%= order.toppingsCost %>
    </div>

    <div class="summary-row">
      <span class="label">Grand Total:</span> <strong>$<%= order.total %></strong>
    </div>
  </div>

  <p><a href="/order">Place another order</a> | <a href="/">Back to Home</a></p>
</body>
</html>
